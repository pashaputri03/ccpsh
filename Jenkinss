pipeline {
    agent any
    stages {
        stage('Hello achaa') {
            steps {
                echo 'berhasil yaa'
            }
        }
      stage('Checkout Code') {
            steps {
                echo 'Cloning public GitHub repository...'
                git branch: 'main', url: 'https://github.com/pashaputri03/ccpsh.git'
            }
        }
 stage('Build Docker Images') {
            steps {
                script {
                    echo 'Building Docker image...'
                    bat 'docker build -t my-jenkins-demo:latest .'
                }
            }
        }

    }
}
